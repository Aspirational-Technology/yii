  "bin": [
    "framework/yiic"
  ],
  "archive": {
    "exclude": [
      "testdrive"
    ]
  },
  "require": {
    "php": "^8.1",
    "phpseclib/mcrypt_compat": "^2.0",
    "ext-mcrypt": "*",
    "ext-openssl": "*",
    "ext-memcached": "*"
  },
  "autoload": {
    "classmap": [
      "framework/YiiBase.php",
      "framework/yii.php"
    ]
  },
  "require-dev": {
    "cweagans/composer-patches": "^1.7",
    "phpunit/phpunit": "4.8.34",
    "phpunit/phpunit-selenium": "~1.4.0",
    "phing/phing": "2.*",
    "phing/phing-composer-configurator": "dev-master",
    "pear/archive_tar": "~1.4.6",
    "symfony/yaml": "*",
    "symfony/flex": "*",
    "phpspec/prophecy": "*",
    "phpspec/phpspec": "*"
  },
  "extra": {
    "branch-alias": {
      "dev-master": "1.1.x-dev"
    }
  },
  "config": {
    "allow-plugins": {
      "cweagans/composer-patches": true,
      "symfony/flex": true,
      "phing/phing-composer-configurator": true
    },
    "platform": {
      "ext-mcrypt": "8.1",
      "ext-memcached": "8.1",
      "ext-openssl": "8.1"
    }
  }
}
